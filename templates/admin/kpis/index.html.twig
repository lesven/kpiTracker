{% extends 'base.html.twig' %}

{% block title %}Alle KPIs - KPI Tracker{% endblock %}

{% block page_title %}Alle KPIs{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_admin_kpi_new') }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Neue KPI
    </a>
{% endblock %}

{% block body %}
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Benutzer</th>
                <th>Intervall</th>
                <th>Erstellt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for kpi in kpis %}
                <tr>
                    <td>{{ kpi.name }}</td>
                    <td>{{ kpi.user.email }}</td>
                    <td>
                        <span class="badge bg-secondary">
                            {% if kpi.interval == 'weekly' %}Wöchentlich{% elseif kpi.interval == 'monthly' %}Monatlich{% else %}Quartalsweise{% endif %}
                        </span>
                    </td>
                    <td>{{ kpi.createdAt|date('d.m.Y') }}</td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="{{ path('app_admin_kpi_edit', {id: kpi.id}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete('{{ kpi.name }}', '{{ path('app_admin_kpi_delete', {id: kpi.id}) }}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Keine KPIs gefunden.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">KPI löschen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Möchten Sie die KPI "<span id="deleteKpiName"></span>" wirklich löschen?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Löschen
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function confirmDelete(kpiName, deleteUrl) {
            document.getElementById('deleteKpiName').textContent = kpiName;
            document.getElementById('deleteForm').action = deleteUrl;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
{% endblock %}
