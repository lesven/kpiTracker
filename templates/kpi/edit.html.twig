{% extends 'base.html.twig' %}

{% block title %}KPI bearbeiten - KPI Tracker{% endblock %}

{% block page_title %}KPI bearbeiten{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_kpi_show', {id: kpi.id}) }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Zur√ºck zu KPI
    </a>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-pencil"></i> KPI bearbeiten
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.interval, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.interval, {'attr': {'class': 'form-select'}}) }}
                            {{ form_help(form.interval) }}
                            {{ form_errors(form.interval) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.unit, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.unit, {'attr': {'class': 'form-control'}}) }}
                            {{ form_help(form.unit) }}
                            {{ form_errors(form.unit) }}
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.target, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.target, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.target) }}
                    {{ form_errors(form.target) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_kpi_show', {id: kpi.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Abbrechen
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Speichern
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
